<div class="mainlist">
  <%= form_for @order do |f| %>

    <div class="well">
      <h3>Order details</h3>
      <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :phone %>
        <%= f.text_field :phone, value: @user.phone, class: "form-control" %>
      </div>
    </div>

    <div class="well">
      <h3>Items you want to send</h3>
      <%= f.fields_for :line_items do |fli| %>
        <div id="new_lineitems">
          <%= render "new_lineitem", form: fli %>
        </div>
      <% end %>
      <button type="button" class="btn btn-success" id="button_add_lineitem">Add More Items</button>
    </div>

    <div class="well">
      <div class="form-group">
        <%= f.label :total %>
        <%= f.text_field :total, id: "total", class: "form-control", :disabled => true  %>
      </div>
    </div>

    <div class="well">
      <h3>Payment</h3>
      <div class="radio">
        <label>
          <%= f.radio_button :payment, 'Cash' %>
          Cash
        </label>
      </div>
      <div class="radio">
        <label>
          <%= f.radio_button :payment, 'Bank' %>
          Bank
        </label>
      </div>
      <div class="radio">
        <label>
          <%= f.radio_button :payment, 'Online' %>
          Online
        </label>
      </div>
    </div>
    <%= f.submit "Submit", class: "btn btn-default" %>
  <% end %>
</div>
