<div class="mainlist">
  <div class="well infobox">
    <form>
      <div class="checkboxgroup">
        <label for="category">Categories</label>
        <div class="checkbpxes">
        <% @categories.each do |category| %>
          <div class="checkbox">
            <input type="checkbox" id="<%= category.name %>" value="<%= category.id%>">
            <span><%= category.name%></span>
          </div>
        <% end %>
        </div>
      </div>
      <div class="form-group">
        <label for="address">Address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Address">
      </div>
      <div class="form-group">
        <label for="phone">Phone</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Phone">
      </div>
      <div class="radiogroup">
        <label for="payment">Payment</label>
        <div class="radiobuttons">
          <div class="radiobutton">
            <input type="radio" name="optionsRadios" id="optionsRadios1" value="cash" checked>
            <span>Cash</span>
          </div>
          <div class="radiobutton">
            <input type="radio" name="optionsRadios" id="optionsRadios1" value="bank" checked>
            <span>Bank</span>
          </div>
          <div class="radiobutton">
            <input type="radio" name="optionsRadios" id="optionsRadios1" value="online" checked>
            <span>Online</span>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>
