<div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :weight, "Weight(kg)" %>
  <%= form.text_field :weight, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :size, "Size(WxHxD)" %>
  <%= form.text_field :size, class: "form-control" %>
</div>

<h3>Categories</h3>
<% @categories.each do |category| %>
  <div class="checkbox">
    <label>
      <%= form.check_box "category_ids", {multiple: true}, category.id, nil %>
      <%= category.name%>
    </label>
  </div>
<% end %>
